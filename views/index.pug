doctype html
html.no-js(lang="en")
    include ./header.pug
body
    include ./menu.pug
    .ui.container
        h1="All da movies!"
        if (movies)
            a(href="/movies/new").ui.black.fluid.button#addMovie Add Movie
            .ui.four.doubling.stackable.cards
                each movie, i in movies
                    .ui.card
                        .ui.header.centered
                            h2=movie.name
                        .image
                            img(src=base_url+"w185/"+movie.poster_path)
                        - var linkstr = "/movies/" + movie._id;
                        //-a(href=linkstr).ui.blue.basic.fluid.button Read More
                        form(action="/movies/"+movie._id, method="GET")
                            input(type="hidden", name="_csrf", value=csrfToken)        
                            button.ui.blue.basic.fluid.button Read More
                        form(action="/movies/"+movie._id+"/vote", method="POST")
                            input(type="hidden", name="_csrf", value=csrfToken)        
                            button.ui.blue.basic.fluid.button Vote for this movie!
                        if(movie.voters)
                            .ui.container
                                .ui.black.left.floated.label Selected by:
                                each voter, j in movie.voters
                                    .ui.right.floated.label #{voter}
            if (displayReset)
                form(action="/movies?_method=PURGE", method="POST").ui.form#resetForm
                    input(type="hidden", name="_csrf", value=csrfToken)        
                    button.ui.red.basic.button Reset movie database (!)
            img(src="/TMDBlogo.png").ui.small.right.floated.image
        else
            p No Movies Found
        