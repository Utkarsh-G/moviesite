doctype html
html.no-js(lang="en")
    include ./header.pug
body
    include ./menu.pug
    .ui.main.text.container.segment
        .ui.huge.header New Blog
        form(action="/movies", method="POST").ui.form
            .field
                label MovieID
                input(type="text", name="movie[movie_id]", placeholder="TMDB Movie ID", required = "true")
            .field
                label Name
                input(type="text", name="movie[name]", placeholder="name", required="true")
            .field
                label Year
                input(type="text", name="movie[year]", placeholder="year")
            input(type="hidden", name="_csrf", value=csrfToken)
            input(type="submit").ui.violet.basic.button