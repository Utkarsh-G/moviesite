doctype html
html.no-js(lang="en")
    include ./header.pug
body
    include ./menu.pug
    .ui.one.column.stackable.center.aligned.page.grid
        .column.eight.wide
            if movie.poster_path
                .ui.huge.header #{movie.name}
                .image
                    img(src=base_url+"w342/"+movie.poster_path)
                .segment 
                    .content Year of release: #{movie.year}
                .segment
                    .content Runtime: #{movie.runtime} minutes
                .segment
                    .content Overview: #{movie.overview}
            else
                .ui.huge.header #{movie.name}
                if(movie.year)
                    .item 
                        .content Year of release: #{movie.year}
            //-a(href="/movies/"+movie._id+"/edit").ui.orange.basic.fluid.button Edit
            form(action="/movies/"+movie._id+"?_method=DELETE", method="POST")
                input(type="hidden", name="_csrf", value=csrfToken)        
                button.ui.red.basic.fluid.button Delete
